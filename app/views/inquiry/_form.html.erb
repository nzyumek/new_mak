<%= form_with(model: @inquiry, :url => inquiry_confirm_path , local: true) do |f| %>

 
  <% if @inquiry.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @inquiry.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <table class="table">
    <tr>
      <th>
        <span class="job_type_engine">ご用件</span><br>
        <div class="radio-inline">
          <%= f.radio_button :select, :仮入会希望, checked: "checked" %>
          <%= f.label :仮入会希望, class: "job_type_label" %>
          <a href="/newsfeeds">仮入会とは？</a>
        </div>
        <div class="radio-inline">
          <%= f.radio_button :select, :質問・相談 %>
          <%= f.label :質問・相談, class: "job_type_label" %>
        </div>
        <div class="radio-inline">
          <%= f.radio_button :select, :仕事依頼 %>
          <%= f.label :仕事依頼, class: "job_type_label" %>
        </div>
        <div class="radio-inline">
          <%= f.radio_button :select, :その他 %>
          <%= f.label :その他, class: "job_type_label" %>
        </div>        
      </th>
    </tr>
    <tr>
      <th>お名前<span class="text-danger">（必須）</span></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th>メールアドレス<span class="text-danger">（必須）</span></th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td><%= f.text_area :message %></td>
    </tr>
  </table>
  <%= f.submit '確認', class: 'btn btn-primary confirm' %>
<% end %>