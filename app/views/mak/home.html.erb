<% provide(:title, "Home") %>
<section class="conA">
    <div class="bgImg src1"></div>
    <div class="bgImg src2"></div>
    <div class="bgImg src3"></div>
    <div class="bgImg src"></div>
    <div class="logoh">
      <%= image_tag 'logo.png', class: 'logo' %>
      <h1>明治大学</h1><h1>アナウンス研究会</h1>
      <p>明治大学公認サークル</p>
