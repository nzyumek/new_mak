
<% content_for :css do %>
  <%= stylesheet_link_tag 'user_index' %>
<% end %>
        <div class="container">
          <%#= form_tag(users_path, method: "get") do %>
          <%#= select_tag(:gen, options_for_select(@gen), :include_blank => "blank") %>
          <%#= select_tag(:bachelor, options_for_select(@bachelor), :include_blank => "blank") %>
          
          <%#= submit_tag "絞り込み" %>
          <%# end %>
          
          <%= search_form_for @q do |f| %>
            <%= f.label :bachelor, "Keyword" %>
            <%= f.search_field :bachelor_cont %>
          
            <%= f.submit "検索" %>
          <% end %>

          <%# @users.each do |user| %>
            <%#= user %>              
          <%# end %>
          
          <div class="user-table">
            <div class="text-nowrap table-responsive">
              <table class="table table-striped table-hover table-fixed">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col"><%= sort_link(@q, :gen, "期生") %></th>
                    <th scope="col">お名前<%#= sort_link(@q, :lastn, "お名前") %></th>
                    <th scope="col">ふりがな　</th>
                    <% if current_user.admin? || current_user.fuku_kan? || current_user.gijutsu_hp? %>
                    <th scope="col">学籍番号</th>
                    <% end %>
                    <th scope="col">学部<%#= sort_link(@q, :bachelor, "学部") %></th>
                    <th scope="col">学科</th>
                    <th scope="col">メール</th>
                    <th scope="col">Role</th>
                    <% if current_user.admin? || current_user.fuku_kan? || current_user.gijutsu_hp? %>
                      <th scope="col">Edit/delete</th>
                    <% end %>
                  </tr>
                </thead>
                <tbody>
                  
                    <%= render @users %>
                
                </tbody>
              </table>
              <%= paginate @users %>
            </div>
            </div>
            <%= link_to "戻る", :back %>
        </div>
        
        