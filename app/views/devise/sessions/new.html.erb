<% content_for :css do %>
  <%= stylesheet_link_tag 'signin' %>
<% end %>

<body class="text-center">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => "form-signin"} )  do |f| %>
  <%= image_tag "logo.png" , :size => '72x72' %>
  <h1 class="h3 mb-3 font-weight-normal">ログイン</h1>
  
  <div class="field">
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "sr-only" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" , placeholder: "パスワード" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label "次回から自動でログイン" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</body>