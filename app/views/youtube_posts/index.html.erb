<% provide(:title, "Youtube") %>
<% content_for :css do %>
  <%= stylesheet_link_tag 'youtube_posts' %>
<% end %>
<div class="container">
  <div class="playlist">
  <p id="notice"><%= notice %></p>
  
  <h1>Youtube Posts</h1>
  
  <table>
    <thead>
      <tr>
        <th class=""></th>
        
      </tr>
    </thead>
  
    <tbody>
      <% @youtube_posts.each do |youtube_post| %>
        <tr>
          <td><%= youtube_post.title %>
          <div class="videoWrapper"><%= raw youtube_post.content.to_plain_text %></div>
          <%= link_to 'Edit', edit_youtube_post_path(youtube_post) %>
          <%= link_to 'Destroy', youtube_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @youtube_posts %>
  <br>
  <% if current_user.admin? || current_user.gijutsu? || current_user.gijutsu_manager? %> 
    <%= link_to 'New Youtube Post', new_youtube_post_path %>
  <% end %>
  <%= link_to "æˆ»ã‚‹", :back %>
  </div>
</div>